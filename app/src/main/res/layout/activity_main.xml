<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mcaguest.lab_study.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="500px"
            android:layout_height="100px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="monospace"
            android:text="I am going to make a calculator" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="32dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_centerHorizontal="true"
            android:text="2" />


        <Button
            android:id="@+id/button3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button6"
            android:layout_alignBottom="@+id/button6"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_below="@+id/button3"
            android:layout_marginTop="25dp"
            android:text="6" />


        <Button
            android:id="@+id/button7"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button9"
            android:layout_alignBottom="@+id/button9"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:text="7" />


        <Button
            android:id="@+id/button8"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:text="8" />


        <Button
            android:id="@+id/button9"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:layout_below="@+id/button5"
            android:layout_marginTop="25dp"
            android:text="9" />

        <Button
            android:id="@+id/button15"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button14"
            android:layout_alignBottom="@+id/button14"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            android:text="0" />

        <Button
            android:id="@+id/button10"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7"
            android:layout_below="@+id/button8"
            android:layout_marginTop="17dp"
            android:text="+" />

        <Button
            android:id="@+id/button11"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button10"
            android:layout_alignBottom="@+id/button10"
            android:layout_alignLeft="@+id/button8"
            android:layout_alignStart="@+id/button8"
            android:text="-" />

        <Button
            android:id="@+id/button12"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button11"
            android:layout_alignBottom="@+id/button11"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9"
            android:text="*" />

        <Button
            android:id="@+id/button13"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignLeft="@+id/button10"
            android:layout_alignStart="@+id/button10"
            android:layout_below="@+id/button11"
            android:layout_marginTop="25dp"
            android:text="/" />

        <Button
            android:id="@+id/button14"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBaseline="@+id/button13"
            android:layout_alignBottom="@+id/button13"
            android:layout_alignLeft="@+id/button11"
            android:layout_alignStart="@+id/button11"
            android:text="=" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
